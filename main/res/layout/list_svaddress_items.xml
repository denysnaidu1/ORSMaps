<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/searchmain_custom">

    <ImageView
        android:id="@+id/iv_listItem"
        android:src="@drawable/ic_search_items"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:text="Street Name"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/iv_listItem"
        android:id="@+id/tv_listAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_detailAddress"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/iv_listItem"
        android:layout_below="@id/tv_listAddress"
        android:text="DetailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>